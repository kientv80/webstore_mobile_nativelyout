<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="40dp"  android:background="#ffff">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content" android:id="@+id/notifyImage" android:src="@drawable/appicon" android:padding="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/notifyInfo" android:padding="8dp"/>

</LinearLayout>